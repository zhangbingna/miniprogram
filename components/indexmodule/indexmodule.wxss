.module-group{
  padding: 40rpx;
  background-color: #ffffff;
}
.module-group .module-top{
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
}
.module-top .module-title{
  color: #494949;
}
.module-top .module-more{
  color: #41be57;
}
.module-scroll-view{
  margin-top: 40rpx;
  width: 100%;
  height: 400rpx;
  white-space: nowrap;
}
.module-scroll-view .item-navigator{
  width: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
}
.module-scroll-view .item-navigator:last-of-type{
  margin-right: 0;
}
.item-navigator .item-group{
  width: 100%;
}
.item-group .thumbnail-group{
  width: 100%;
  height: 284rpx;
}
.thumbnail-group .thumbnail{
  width: 100%;
  height: 100%;
}
.item-group .item-title{
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}